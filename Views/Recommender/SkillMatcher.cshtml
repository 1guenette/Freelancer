@model IEnumerable<MG_5_FreelanceJobsite.Models.RecommendationResultModel>

@{
    ViewBag.Title = "SkillMatcherView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Recommender</title>

</head>

<style>
    * {
        box-sizing: border-box;
    }

    #myInput {
        background-image: url('/css/searchicon.png');
        background-position: 10px 10px;
        background-repeat: no-repeat;
        width: 100%;
        font-size: 16px;
        padding: 12px 20px 12px 40px;
        border: 1px solid #ddd;
        margin-bottom: 12px;
    }

    #myTable {
        border-collapse: collapse;
        width: 100%;
        border: 1px solid #ddd;
        font-size: 18px;
    }

        #myTable th, #myTable td {
            text-align: left;
            padding: 12px;
        }

        #myTable tr {
            border-bottom: 1px solid #ddd;
        }

            #myTable tr.header, #myTable tr:hover {
                background-color: #f1f1f1;
            }
</style>
<div class="demo">
    <table id="myTable">

        <tr class="header">
            <th style="width:60%;">Name</th>
            <th style="width:40%;"># Of Skill Matches</th>
        </tr>

        @foreach (var data in Model)
        {
            if (data.SkillMatches > 0)
            {
                <tr>
                    <td>@data.UserSkillMatch.FirstName @data.UserSkillMatch.LastName</td>
                    <td>@data.SkillMatches</td>
                </tr>
            }
        }
    </table>

</div>
</html>
