﻿@model MG_5_FreelanceJobsite.Models.SingleMessageDisplayViewModel

@{
    ViewBag.Title = "MsgDisplayView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    a.button {
        -webkit-appearance: button;
        -moz-appearance: button;
        text-decoration: none;
        color: initial;
        background-position: 10px 10px;
        background-repeat: no-repeat;
        width: 25%;
        left: 20%;
        font-size: 16px;
        padding: 12px 20px 12px 40px;
        border: 1px solid blue;
        margin-left: 100px
    }

    h3.box {
        -webkit-appearance: none;
        -moz-appearance: none;
        text-decoration: none;
        color: initial;
        background-position: 10px 10px;
        background-repeat: no-repeat;
        width: 50%;
        left: 20%;
        font-size: 16px;
        margin-bottom: 12px;
        margin-left: 100px
    }
</style>

<script type="text/javascript" src="/scripts/jquery.min.js"></script>

@{
    if (Model.SenderName == null) //sent by current user
    {
        <title>Message Sent To @Model.ReceipientName</title>
    }
    else
    {
        <title>Message From @Model.SenderName</title>
    }
}
<br />
<h3 class="box">@Model.Msg.Date</h3>
<br />
<h3 class="box">From: @Model.SenderName</h3>
<br />
<h3 class="box">@Model.Msg.Subject</h3>
<br />
<h3 class="box">@Model.Msg.Message</h3>
<br />
<h3 class="box"><a href="@Url.Action("MessagePageDisplayStd", "Msg")" class="button">Message Page</a></h3>

