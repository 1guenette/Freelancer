﻿@model MG_5_FreelanceJobsite.Models.TimeSpecificJobListing

@{
    ViewBag.Title = "DefaultPageView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    #Content {
        position: absolute;
        top: 70%;
        left: 50%;
        transform: translate(-50%,-50%);
    }
</style>

<script type="text/javascript" src="/scripts/jquery.min.js"></script>

<title>Welcome to Freelance Jobsite</title>
<br /> 
<p><a href="@Url.Action("ListJobsRandom", "DefaultHomePage")">Random Jobs</a></p>
<br /> 
@{ 
    for(int i=0;i<Model.ForPosting.Count();i++)
    {
        int timeremaining = Convert.ToInt32((Model.ForPosting.ElementAt(i).BidEndDate - DateTime.Now).TotalMinutes );
        int ID = Model.ForPosting.ElementAt(i).Id;
        <p><a href="@Url.Action("Display", "DisplayJob", new {id = ID})">@Model.ForPosting.ElementAt(i).Title</a> &nbsp;&nbsp;Time remaining: @timeremaining</p>
        <br />
    }
}
<br />

